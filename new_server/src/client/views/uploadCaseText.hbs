<section class="top-box">
	<form action="/cases/{{result.id}}/text" method="post">
		<div class="upload-subheader-wrapper">
			<input id="title" name="title" class="slab-font" type="text" placeholder="Hier Titel hinzufügen..."
				value="{{result.oneCase.case.title}}" required/>
			<div class="upload-subheader-wrapper">
				<label for="issue" class="upload-subheader">Sachverhalt</label>
			</div>
			<textarea id="normalArea1" name="issue" class="normalArea slab-font upload-input"
				placeholder="Beschreibe den Sachverhalt...">{{result.oneCase.case.issue}}</textarea>
			<div class="upload-subheader-wrapper">
				<label for="task" class="upload-subheader">Aufgaben</label>
			</div>
			<textarea id="normalArea2" name="task" class="normalArea slab-font upload-input"
				placeholder="Formuliere die Aufgaben...">{{result.oneCase.case.task}}</textarea>
			<div class="upload-subheader-wrapper">
				<label for="solution" class="upload-subheader">MusterLösung</label>
			</div>
			<textarea id="normalArea3" name="solution" class="normalArea slab-font upload-input"
				placeholder="Beschreibe die Lösung...">{{result.oneCase.case.solution}}</textarea>

				<div class="upload-subheader-wrapper">
					<label for="footnotes" class="upload-subheader">Fussnoten</label>
				</div>
			<textarea id="normalArea" name="footnotes" class="normalArea slab-font upload-input"
				placeholder="Füge deine Fussnoten hier ein...">{{result.oneCase.footnotes}}</textarea>
			<input name="upload-continue" class="continue-upload" value="Weiter" type="submit"><br>
			<input id="upload-save" name="upload-save" class="continue-upload" value="Als Entwurf speichern"
				type="submit">
	</form>
</section>